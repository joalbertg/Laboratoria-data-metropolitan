<p id="notice"><%= notice %></p>

<h1>Listing Stations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Lat</th>
      <th>Lng</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.name %></td>
        <td><%= station.description %></td>
        <td><%= station.category %></td>
        <td><%= station.lat %></td>
        <td><%= station.lng %></td>
        <td><%= link_to 'Show', station %></td>
      </tr>
    <% end %>
  </tbody>
</table>
